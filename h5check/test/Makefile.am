include $(top_srcdir)/config/commence.am

# Include files in /src directory and /tools/lib directory
INCLUDES=-I$(top_srcdir)/src

# Test programs and scripts
TEST_PROG=testgen
TEST_SCRIPT=testh5check.sh

check_PROGRAMS=$(TEST_PROG)
check_SCRIPTS=$(TEST_SCRIPT)
SCRIPT_DEPEND=testgen$(EXEEXT)

# Our main target, the h5dump tool.
bin_PROGRAMS=testgen

# All the programs depend on the hdf5 and h5tools libraries
LDADD=../src/libh5check.a

testgen: testgen.c
	h5cc testgen.c -o testgen

# The testscript depends on the testgen program to generated data files
# it uses.
testh5check.sh.chkexe_: testgen.chkexe_

# Temporary files.  *.h5 are generated by testgen.  They should
# copied to the testfiles/ directory if update is required.
CHECK_CLEANFILES+=*.h5 *.bin full*.data logfile.txt
DISTCLEANFILES=testh5dump.sh

include $(top_srcdir)/config/conclude.am
