SVNCHECKOUT()
{
   SVNROOT=https://svn.mcs.anl.gov/repos/openpa
   SVNVERSION=trunk
   cd $BASEDIR/current; svn info
   if [ "$?" = "0" ];then
      echo "Updating $BASEDIR/current from svn."
      ( svn -q update ) || exit 1
   else
      echo "Checking out from $SVNROOT/${SVNVERSION} into $BASEDIR/current"
      # Check out the current version from source repository.
      (cd $BASEDIR; svn -q co ${SVNROOT}/${SVNVERSION} current ) || exit 1
   fi
   HOSTNAME=`hostname | cut -f1 -d.`
   if [ "${HOSTNAME}" = "jam" ]; then
      cd current
      PACKAGEDIR=/mnt/hdf/packages
      AUTOMAKEDIR=${PACKAGEDIR}/automake/automake-1.10.1/bin
      AUTOCONFDIR=${PACKAGEDIR}/autoconf/autoconf-2.63/bin
      PATH=${AUTOCONFDIR}:${PACKAGEDIR}/m4/m4-1.4.7/bin:${PACKAGEDIR}/m4/m4-1.4.7/share:$PATH
      ${AUTOMAKEDIR}/aclocal-1.10 --force -I confdb
      ${AUTOCONFDIR}/autoconf
      ${AUTOCONFDIR}/autoheader
      ${AUTOMAKEDIR}/automake-1.10 --add-missing --copy --force-missing
   fi
}

HDFREPOS=opa
SWVERSION=opa
